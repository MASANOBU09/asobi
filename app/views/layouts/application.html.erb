
<html>
  <head>
    <title>Asobi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header>
  <h1>遊び診断</h1>
  <div class="header-list">
  <ul>
   <li> <%= link_to "トップページ", vacations_top_path %> <li>
   <li> <%= link_to "遊び一覧", vacations_path %> <li>
   <li> <%= link_to "遊び診断", sindans_index_path %> <li>
  </ul>
  </div>
</header>
  <a href="https://front.codes/" class="logo" target="_blank">
  </a>
    <input class="menu-icon" type="checkbox" id="menu-icon" name="menu-icon"/>
    <label for="menu-icon"></label>
    <nav class="nav">
      <ul class="pt-5">
          <% if user_signed_in? %>
            <li><%= button_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <li> <%= link_to "トップページ", vacations_top_path %> <li>
            <li> <%= link_to "遊び投稿", new_vacation_path %> <li>
            <li> <%= link_to "遊び一覧", vacations_path %> <li>
            <li> <%= link_to "遊び診断", sindans_index_path %> <li>
          <% else %>
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
 <main>
  <%= yield %>
 </main>
</body>

</html>
